#!/usr/bin/env bash

set -euo pipefail

root="$(cd "$(dirname "$0")/.." && echo "${PWD}")"

export PATH="$(sed -E "s_:${root}/bin:_:_; s_(^|:)${root}/bin(:|$)__" <<< "${PATH}")"

set -a
. "${root}/.env"
set +a

if [[ "${OSTYPE:-}" != darwin* ]] && [[ "${EUID}" != 0 ]]; then
    exec sudo -E skopeo "$@"
else
    exec skopeo "$@"
fi
