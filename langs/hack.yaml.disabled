id: "hack"
aliases:
  - "hhvm"
name: "Hack"

install:
  apt:
    - hhvm

repl: |
  hhvm -a
input: |
  print 123 * 234

main: "main.hack"
template: |
  <<__EntryPoint>>
  function main(): void {
    echo "Hello, world!\n";
  }

run: |
  echo "Type 'r' at the debugger prompt to run the code" && hhvm -a main.hack
helloInput: |
  r

scope:
  code: |
    function x() : int {
      return 123 * 234;
    }
  input: |
    r
    p x()
